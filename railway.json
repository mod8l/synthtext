{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {}
  },
  "deploy": {
    "startCommand": "/app/start-railway.sh",
    "healthchecks": {
      "enabled": true,
      "cpu": false,
      "memory": false
    },
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  }
}
