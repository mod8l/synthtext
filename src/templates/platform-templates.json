      "emoji_rules": {
        "max_allowed": 2,
        "recommended": [
          "‚Üí",
          "‚Üì",
          "‚úÖ",
          "üìä",
          "üí°",
          "üéØ"
        ],
        "avoid": [
          "üëç",
          "‚ù§Ô∏è",
          "üî•",
          "üöÄ"
        ]
      },
      "hashtag_rules": {
