{
  "version": "1.0",
  "description": "Platform-Specific Post Templates & Validation Rules for AutoMarket OS",
  "platforms": [
    {
      "name": "LinkedIn",
      "maxCharacters": 3000,
      "optimal": {
        "characterRange": [1200, 2500],
        "idealType": "thought_leadership"
      },
      "contentTypes": [
        {
          "type": "thought_leadership",
          "description": "Industry insights and professional perspectives",
          "template": "{hook}\n\n{context_or_data}\n\n{insight_or_framework}\n\n{proof_point}\n\n{cta}",
          "hook_examples": [
            "Unpopular opinion: {take}",
            "Most {industry} companies are missing {insight}",
            "Here's what {competitor} got wrong about {topic}",
            "5 reasons {trend} is reshaping {industry}",
            "Data shows that {stat}, yet {counter_intuitive_insight}"
          ],
          "required_elements": [
            "hook",
            "context_or_data",
            "insight",
            "cta"
          ]
        },
        {
          "type": "thread_starter",
          "description": "Multi-part professional discussion (5-7 posts)",
          "template": "Post 1 (Hook):\n{hook}\n\nPosts 2-X (Development):\n{supporting_points}\n\nPost X (Conclusion):\n{conclusion_or_cta}",
          "thread_length": "5-7 posts",
          "max_post_length": 1300,
          "required_elements": [
            "hook",
            "2+_supporting_points",
            "conclusion"
          ]
        },
        {
          "type": "announcement",
          "description": "Product updates, partnerships, milestones",
          "template": "{announcement_headline}\n\n{what_changed_and_why}\n\n{customer_benefit}\n\n{cta_with_link}",
          "required_elements": [
            "what",
            "why",
            "customer_benefit",
            "cta"
          ]
        },
        {
          "type": "case_study",
          "description": "Customer success story with metrics",
          "template": "{customer_intro}\n\nChallenge: {challenge}\nSolution: {solution}\nResult: {quantified_result}\n\n{cta}",
          "required_elements": [
            "customer_name_or_company",
            "challenge",
            "solution",
            "quantified_result"
          ]
        }
      ],
      "cta_strategies": [
        {
          "type": "link_in_comments",
          "example": "What's your take? Link in comments ‚Üí"
        },
        {
          "type": "dm_for_access",
          "example": "Interested in early access? DM me"
        },
        {
          "type": "join_community",
          "example": "Join {X} professionals discussing this ‚Üí"
        },
        {
          "type": "question",
          "example": "How do you approach this? Comment below ‚Üì"
        }
      ],
      "forbidden_patterns": [
        "In today's fast-paced world",
        "Click here",
        "Limited time offer",
        "Game-changer",
        "Synergize",
        "Reach out to our team",
        "Solutions for all",
        "hashtag spam (>5 hashtags)"
