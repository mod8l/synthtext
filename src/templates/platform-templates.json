  "validation_rules": {
    "universal": [
      {
        "name": "No hallucinations",
        "description": "All facts must come from website content",
        "check": "Every claim is sourced from Firecrawl markdown"
      },
      {
        "name": "Brand voice consistency",
        "description": "Tone, vocabulary, personality match website",
        "check": "Compare against identified brand voice"
      },
      {
        "name": "No generic phrases",
        "description": "Avoid clich√©s and low-effort language",
        "check": "Scan against banned phrase list"
      },
      {
        "name": "Clear CTA",
        "description": "Every post must have actionable next step",
        "check": "CTA is specific and natural"
      },
      {
        "name": "Character count compliance",
        "description": "Stay within platform maximums",
        "check": "Count characters, flag if over limit"
      }
    ],
    "platform_specific": {
      "linkedin": [
        {
          "name": "Data point or insight required",
          "rule": "Post must include metric, statistic, or non-obvious insight"
        },
        {
          "name": "Professional tone",
          "rule": "No slang, memes, or overly casual language"
        },
        {
          "name": "Hashtag limit",
          "rule": "Max 10 hashtags (recommend 3-5)"
        }
      ],
      "twitter": [
        {
          "name": "Engagement hook",
          "rule": "Post must invite response (question, opinion, reaction)"
        },
        {
          "name": "Originality check",
          "rule": "Not a direct repurposing of another platform's post"
        },
        {
          "name": "Conciseness",
          "rule": "If thread, each tweet standalone valuable"
        }
      ],
      "instagram": [
        {
          "name": "Creative brief mandatory",
          "rule": "Every post with image must have detailed visual brief"
        },
        {
          "name": "Caption tells story",
          "rule": "Caption not just listing features; has narrative"
        },
        {
          "name": "Hashtag strategy",
          "rule": "15-30 relevant hashtags, at end of caption"
        }
      ],
      "facebook": [
        {
          "name": "Community engagement",
          "rule": "Post should encourage discussion or action"
        },
        {
          "name": "Link format",
          "rule": "Use full URLs with UTM params, not shortened links"
        },
        {
          "name": "Authentic tone",
          "rule": "No corporate speak; conversational and friendly"
        }
      ]
    }
  },
  "guardrail_checklist": {
    "before_publishing": [
      "‚ùå Hallucinations: Facts sourced from website",
      "‚ùå Brand voice: Matches website tone & personality",
      "‚ùå Generic phrases: Banned list check",
      "‚ùå CTA: Clear and natural",
      "‚ùå Character count: Within platform limits",
      "‚ùå Guardrails: Platform-specific rules met",
      "‚ùå UTM tracking: Links include UTM params",
      "‚ùå Creative brief: Image posts have detailed briefs",
      "‚ùå Accuracy: No exaggerated claims",
      "‚ùå Spelling/grammar: Proofread"
    ]
  }
}
